# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/route_consolidator
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google Cloud APIs (Get from Google Cloud Console)
# Enable: Maps JavaScript API, Directions API, Distance Matrix API, Geocoding API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-from-google-cloud-console

# WhatsApp Cloud API (Get from Meta Developers)
# Create WhatsApp Business App at developers.facebook.com
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token-for-webhook
PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Service URLs
OPTIMIZER_SERVICE_URL=http://localhost:8001
API_BASE_URL=http://localhost:3001

# App Configuration
NODE_ENV=development
PORT=3001
ADMIN_PORT=3000

# Security
CORS_ORIGIN=http://localhost:3000,exp://localhost:19000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration (for production)
WEBHOOK_BASE_URL=https://your-domain.com
NGROK_URL=https://your-ngrok-id.ngrok.io

# Mobile App Configuration (React Native/Expo)
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_WS_URL=ws://localhost:3001
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optimization Settings
MAX_ROUTE_STOPS=20
OPTIMIZATION_TIMEOUT_MS=30000
AUTO_ASSIGN_THRESHOLD_SCORE=0.7

# Notification Settings (Future)
FCM_SERVER_KEY=your-firebase-cloud-messaging-key
APNS_KEY_ID=your-apple-push-notification-key

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Development Tools
ENABLE_API_DOCS=true
ENABLE_CORS_DEV=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/route_consolidator_test

# Email Configuration (Future)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@route-consolidator.com
SMTP_PASS=your-smtp-password

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=route-consolidator-assets

# Redis Configuration (Production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration (Production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=route_consolidator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# Feature Flags
ENABLE_AUTO_ASSIGNMENT=true
ENABLE_ROUTE_OPTIMIZATION=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_WHATSAPP_BOT=true
